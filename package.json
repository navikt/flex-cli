{
    "name": "flex-github-tools",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "build": "ncc build src/main.ts -o build",
        "start": "node build/index.js",
        "dev": "ncc run src/main.ts",
        "rebase-red": "ncc run src/rebaseRed.ts",
        "verifiser": "ncc run src/verifiser.ts",
        "patch": "ncc run src/patch-alle.ts",
        "lint": "eslint --ext=ts src",
        "lint:fix": "eslint --ext=ts src --fix",
        "prettier:write": "prettier --write .",
        "prettier:check": "prettier --check .",
        "format": "npm run lint:fix && npm run prettier:write"
    },
    "dependencies": {
        "@octokit/rest": "^18.12.0",
        "dotenv": "^16.0.0",
        "prompts": "^2.4.2",
        "yaml": "^2.0.1"
    },
    "devDependencies": {
        "@types/prompts": "^2.0.14",
        "@typescript-eslint/eslint-plugin": "^5.12.1",
        "@typescript-eslint/parser": "^5.12.1",
        "@vercel/ncc": "^0.33.4",
        "eslint": "^8.9.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "prettier": "2.6.2",
        "typescript": "^4.6.3"
    }
}
