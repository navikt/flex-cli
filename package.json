{
    "name": "flex-cli",
    "version": "1.0.0",
    "type": "commonjs",
    "scripts": {
        "build": "bun build ./src/index.ts --outdir ./build --target bun",
        "start": "bun run src/index.ts",
        "lint": "eslint --ext=ts src",
        "lint:fix": "eslint --ext=ts src --fix",
        "prettier:write": "prettier --write .",
        "prettier:check": "prettier --check .",
        "format": "npm run lint:fix && npm run prettier:write"
    },
    "dependencies": {
        "@octokit/rest": "^20.0.2",
        "date-fns": "^3.3.1",
        "dotenv": "^16.3.1",
        "eslint": "^8.50.0",
        "libsodium-wrappers": "^0.7.13",
        "octokit": "^3.1.2",
        "prompts": "^2.4.2",
        "remeda": "^1.27.0",
        "typescript": "^5.2.2",
        "yaml": "^2.3.2",
        "yargs": "^17.7.2"
    },
    "devDependencies": {
        "@navikt/eslint-config-teamsykmelding": "^4.3.0",
        "@types/libsodium-wrappers": "^0.7.11",
        "@types/prompts": "^2.4.4",
        "@types/yargs": "^17.0.24",
        "bun-types": "latest",
        "prettier": "^3.0.3"
    },
    "eslintConfig": {
        "extends": [
            "@navikt/eslint-config-teamsykmelding"
        ],
        "rules": {
            "@typescript-eslint/no-explicit-any": "off",
            "@typescript-eslint/explicit-function-return-type": "off"
        }
    },
    "prettier": "@navikt/eslint-config-teamsykmelding/prettier"
}
